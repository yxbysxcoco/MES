@{
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

    <div id="template">
        <div style="margin: 12px;">
            <Breadcrumb>
                <Breadcrumb-Item>工装管理</Breadcrumb-Item>
                <Breadcrumb-Item>模板示例</Breadcrumb-Item>
            </Breadcrumb>
        </div>
        <p>
            双向绑定原理，通过v-model和data中定义的数据关联，
            当修改数据的时候页面自动更新
        </p>
        <i-input v-model="msg"></i-input>
        {{ msg }}
        <p>使用axios获取数据</p>
        <i-button type="primary" v-on:click="handleGetData">获取数据</i-button>
        <p>这里是获取到的数据: {{ dataInfo }}</p>
        <p>数组增删改查示例</p>
        <i-button v-on:click="handleAdd">增加</i-button>
        <i-button v-on:click="handleChange(0)">修改</i-button>
        <i-button v-on:click="handleDelete(0)">删除</i-button>
        <div> {{ list }}</div>
    </div>

<script>
    var vm = new Vue({
        el: "#template",
        data: {
            msg: "模板",
            dataInfo: null,
            list: [
                {
                    name: "查SHILONG",
                    id: "12"
                },
            ]
        },
        methods: {
            handleGetData() {
                axios({
                    method: 'post',
                    url: "http://47.97.117.142:18082/user/login",
                    data: {
                        userName: "504",
                        password: "1213"
                    }
                }).then((res) => {
                    this.dataInfo = res
                },
                ).catch( (err) => {
                    alert(err);
                });
            },
            handleAdd() {
                this.list.push({
                    name: "查SHILONG",
                    id: "12"
                })
            },
            handleChange(index) {
                this.$set(this.list[index], "name", "小龙")
            },
            handleDelete(index) {
                this.list.splice(index, 1);
            }
        }
    })
</script>