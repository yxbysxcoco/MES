@using MES.Infrastructure
@using MES.Const
@model MES.Models.SearchModels
@{
    Layout = null;
}

<img src="1.jpg" hidden onerror="datePickerInit()" />
<form>
    <div class="row">
        @foreach (var item in Model)
        {
            if (item.SearchType == SearchType.InputText)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="@item.Id">@item.Alias</label>
                        @Html.Input(item.Id, "text")
                    </div>
                </div>
            }
            else if (item.SearchType == SearchType.InputArea)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="@item.Id">@item.Alias</label>
                        @Html.Input(item.Id, "area")
                    </div>
                </div>
            }
            else if (item.SearchType == SearchType.InputPW)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="@item.Id">@item.Alias</label>
                        @Html.Input(item.Id, "password")
                    </div>
                </div>
            }
            else if (item.SearchType == SearchType.Select)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="buttonText">@item.Alias</span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu" style="height: 120px; overflow: auto;">
                                @foreach (var i in item.DataDictionary.Keys)
                                {
                                    <li><a href="#">@item.DataDictionary[i]</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else if (item.SearchType == SearchType.DatePicker)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="@item.Id">@item.Alias</label>
                        @Html.DatePicker(item.Id)
                    </div>
                </div>
            }
            else if (item.SearchType == SearchType.Button)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Button(item.Id)
                    </div>
                </div>
            }
        }
    </div>
</form>

<script>
    var datePickerInit = function () {
        $("#datepicker").datepicker();
    }
    var handleSearch = function () {

    }
</script>
