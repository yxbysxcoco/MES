<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Libs/ui/css/layui.css" />
    <script src="~/Libs/ui/layui.all.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <meta charset="utf-8" />
    <script>
        let searchURL = '';
        let formItems = [];
    </script>
</head>
<body>
    <div>
        @RenderBody()
        <script>
            const getData = (options) => {
                let result = null,
                    error = null;
                $.ajax({
                    type: options.method,
                    url: options.url,
                    data: options.data,
                    dataType: 'JSON',
                    success: res => {
                        result = res;
                        return result;
                    },
                    error: err => {
                        error = err;
                        if (err.status) {
                            layer.open({
                                title: '浏览器错误码' + err.status,
                                content: err.responseText
                            });
                            return null;
                        }
                    }
                })
            }
        </script>
    </div>
</body>
</html>
