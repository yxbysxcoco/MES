@using SQ_Render.Models.View
@using SQ_Render.Const
@model AbstractElement
@{
    ViewBag.Title = "AddSalesOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Render(Model)


<script>
    function selectMaterial(tableId) {
        layui.layer.open({
            type: 2,
            title: "新增物料",
            area:['100%','80%'],
            content: '@Url.Action("SelectMateriel", "Materiel")',
            end: function () {
                if (window.materielParam == null)
                    return;
                reloadTable(tableId, window.materielParam);
            }
        });
    }
    function reloadTable(tableId, data) {
        layui.table.reload(tableId, {
            page: {
                curr: 1
            },
            data: data
        });
    }
</script>